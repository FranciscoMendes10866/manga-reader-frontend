{
  "name": "frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "prepare": "husky install",
    "check-types": "tsc --pretty --noEmit",
    "check-format": "prettier --check '**/*.{ts,tsx}'",
    "check-lint": "eslint '**/*.{ts,tsx}'",
    "format": "prettier --write '**/*.{ts,tsx}'",
    "test-all": "pnpm check-format && pnpm check-lint && pnpm check-types && pnpm build",
    "generate": "graphql-codegen --config codegen.yml",
    "test-codegen": "pnpx playwright codegen localhost:3000"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.7.4",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@fontsource/poppins": "^4.5.0",
    "dayjs": "^1.10.7",
    "framer-motion": "^5.6.0",
    "graphql": "^16.2.0",
    "graphql-tag": "^2.12.6",
    "next": "12.0.8",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-icons": "^4.3.1",
    "urql": "^2.0.6",
    "usehooks-ts": "^2.2.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.3.1",
    "@graphql-codegen/typescript": "2.4.2",
    "@graphql-codegen/typescript-operations": "2.2.2",
    "@graphql-codegen/typescript-react-apollo": "3.2.4",
    "@graphql-codegen/typescript-urql": "^3.4.2",
    "@playwright/test": "^1.17.2",
    "@types/node": "17.0.8",
    "@types/react": "17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^7.32.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "playwright": "^1.17.2",
    "prettier": "^2.5.1",
    "pretty-quick": "^3.1.3",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{ts,tsx}": "prettier --write"
  }
}